<Page
    x:Class="NetHack.PlayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NetHack"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Black"/>
            <Setter Property="Foreground" Value="#FF51EA25" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Beige"/>
            <Setter Property="BorderBrush" Value="#FF51EA25"/>
        </Style>
    </Page.Resources>
    <Grid x:Name="LayoutRoot" Background="Black" >
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" Grid.Column="0">
            <StackPanel x:Name="LayoutMessages" >
                <TextBlock Text="First Message"/>
                <TextBlock Text="Second Message"/>
                <TextBlock Text="Third Message"/>
                <TextBlock Text="Fourth Message"/>
                <TextBlock Text="Fifth Message"/>
                <TextBlock Text="Six Message"/>
                <TextBlock Text="Seven Message"/>
                <TextBlock Text="Eight Message"/>
                <TextBlock Text="Nine Message"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel x:Name="LayoutStatus" Grid.Row="2" Grid.Column="0">
            <TextBlock Text="First Status"/>
            <TextBlock Text="Second Status"/>
        </StackPanel>
        <RelativePanel x:Name="LayoutMiddle" Grid.Row="1" Grid.Column="0" SizeChanged="LayoutMiddle_SizeChanged">
            <TextBlock x:Name="TestText" Text="foo" />
            <ScrollViewer x:Name="InventoryScrollViewer" RelativePanel.AlignRightWithPanel="True" Background="Black">
                <StackPanel x:Name="LayoutInventory">
                    <TextBlock Text="a - some food"/>
                    <TextBlock Text="b - a really complicated description of food"/>
                </StackPanel>
            </ScrollViewer>
            <ScrollViewer x:Name="MapScrollViewer" KeyDown="ScrollViewer_KeyDown" IsTabStop="True" RelativePanel.AlignLeftWithPanel="True">
                <StackPanel x:Name="LayoutMap" >
                    <TextBlock Text="ROW_00_7890123456789012345678901234567890123456789012345678901234567890123456789" />
                    <TextBlock Text="ROW_01_7890123456789012345678901234567890123456789012345678901234567890123456789" />
